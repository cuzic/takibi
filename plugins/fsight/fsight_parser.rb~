# coding: utf-8
require 'lib/parser'

module Takibi
  class ItproParser < Parser
  end
end

class Takibi::ItproParser
  def self.extract src, url
    super src, url
  end

  rss_regex %r(news.livedoor.com/article/detail)

  title_xpath          '//meta[@name="MainTitle"]/@content | //h1[@class="kijiTitle"]'
  published_time_xpath '//meta[@name="ArticleDate"]/@content | //span[@class="displayDate"]'
  author_xpath         '//div[@id="author"]/text()'
  images_xpath         ''
  image_caption_xpath  ''

  body_xpath           '//div[@id="kiji"]'
  noisy_elems_xpaths   %W()
  next_link_xpath      '//div[@id="naviBottom"]//a[contains(. ">>")]'
end
